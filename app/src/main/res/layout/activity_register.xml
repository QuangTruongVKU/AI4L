<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp">

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="207dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#9C27B0"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="30sp"
            app:layout_constraintEnd_toEndOf="@+id/editCheckPassRegister"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="@+id/editCheckPassRegister"
            app:layout_constraintTop_toBottomOf="@+id/editCheckPassRegister" />

        <EditText
            android:id="@+id/editCheckPassRegister"
            android:layout_width="299dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:paddingLeft="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textCheckPassRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textCheckPassRegister"
            app:layout_constraintTop_toBottomOf="@+id/textCheckPassRegister" />

        <TextView
            android:id="@+id/textCheckPassRegister"
            android:layout_width="197dp"
            android:layout_height="23dp"
            android:layout_marginTop="52dp"
            android:text="Nhập lại mật khẩu : "
            android:textAlignment="viewStart"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/editPassRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editPassRegister"
            app:layout_constraintTop_toBottomOf="@+id/editPassRegister" />

        <EditText
            android:id="@+id/editUserNameRegister"
            android:layout_width="299dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:paddingLeft="16sp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textUserRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textUserRegister"
            app:layout_constraintTop_toBottomOf="@+id/textUserRegister" />

        <TextView
            android:id="@+id/textUserRegister"
            android:layout_width="197dp"
            android:layout_height="23dp"
            android:layout_marginTop="52dp"
            android:text="Tên đăng nhập : "
            android:textAlignment="viewStart"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/head"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/head"
            app:layout_constraintTop_toBottomOf="@+id/head" />

        <EditText
            android:id="@+id/editPassRegister"
            android:layout_width="299dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="text|textPassword"
            android:paddingLeft="16sp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textPassRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textPassRegister"
            app:layout_constraintTop_toBottomOf="@+id/textPassRegister" />

        <TextView
            android:id="@+id/textPassRegister"
            android:layout_width="194dp"
            android:layout_height="22dp"
            android:layout_marginTop="52dp"
            android:text="Mật khẩu : "
            android:textAlignment="viewStart"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/editUserNameRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editUserNameRegister"
            app:layout_constraintTop_toBottomOf="@+id/editUserNameRegister" />

        <TextView
            android:id="@+id/head"
            android:layout_width="301dp"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/agbalumo"
            android:text="Đăng Ký"
            android:textAlignment="center"
            android:textColor="#9C27B0"
            android:textSize="50sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>