<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp bóng bao quanh -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="70dp"
                android:centerColor="#55000000"
                android:endColor="#00000000"
                android:centerX="0.5"
                android:centerY="0.5" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>

    <!-- Lớp nút chính -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#9C27B0" /> <!-- Màu nền nút -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Đường viền -->
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>

</layer-list>
